<!DOCTYPE aspectran PUBLIC "-//ASPECTRAN//DTD Aspectran Configuration 5.0//EN"
        "http://aspectran.github.io/dtd/aspectran-5.dtd">

<aspectran>

    <description>
        TTS API V0
    </description>

    <settings>
        <setting name="transletNamePattern" value="/api/v0/*"/>
    </settings>

    <translet name="/tts">
        <request>
            <parameters>
                <item name="text" mandatory="true"/>
            </parameters>
        </request>
        <headers>
            <item name="Content-Type">text/plain</item>
            <item name="Content-Transfer-Encoding">base64</item>
        </headers>
        <action bean="ttsApiV0" method="tts"/>
    </translet>

    <translet name="/wav">
        <request>
            <parameters>
                <item name="text" mandatory="true"/>
            </parameters>
        </request>
        <headers>
            <item name="Content-Type">audio/wav</item>
            <item name="Content-Disposition">attachment; filename="output.wav"</item>
        </headers>
        <action bean="ttsApiV0" method="download"/>
    </translet>

</aspectran>